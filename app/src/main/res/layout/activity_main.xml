<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp"
    android:id="@+id/background">

    <TextView
        android:id="@+id/moveseekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:textSize="22sp"
        android:textColor="#000"
        android:text="Move Seekbar To Change The BG Color"/>
    
    <SeekBar
        android:id="@+id/red"
        android:scrollbarSize="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moveseekbar"
        android:layout_marginTop="100dp"
        android:max="255"
        android:progress="255"/>

    <SeekBar
        android:id="@+id/green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/red"
        android:layout_marginTop="30dp"
        android:max="255"
        android:progress="255"/>

    <SeekBar
        android:id="@+id/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/green"
        android:layout_marginTop="30dp"
        android:max="255"
        android:progress="255"/>

    <TextView
        android:id="@+id/tv_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blue"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:textSize="20sp"
        android:textColor="#000"
        android:text="red"/>

    <TextView
        android:id="@+id/tv_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_red"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:textSize="20sp"
        android:textColor="#000"
        android:text="green"/>

    <TextView
        android:id="@+id/tv_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_green"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:textSize="20sp"
        android:textColor="#000"
        android:text="red"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="400dp"
        android:layout_height="160dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_blue"
        app:srcCompat="@drawable/ic_camera" />

    <ImageView
        android:id="@+id/cirleimage"
        android:layout_width="85dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_blue"
        app:srcCompat="@drawable/ic_add_circle" />


</androidx.constraintlayout.widget.ConstraintLayout>